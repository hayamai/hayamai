            </m:MaterialSideNav>
        </m:MaterialHeader>

        <m:MaterialContainer>
            <m:MaterialPanel textAlign="CENTER">
                <m:MaterialIcon marginTop="120" textColor="BLUE_DARKEN_1" iconType="EVENT" iconSize="LARGE"/>
                <m:MaterialLabel text="Masjid An Ni'ma" textColor="BLUE" fontSize="2em"/>
                <m:MaterialLabel text="En cours de construction ...." textColor="BLUE" fontSize="0.8em"/>
